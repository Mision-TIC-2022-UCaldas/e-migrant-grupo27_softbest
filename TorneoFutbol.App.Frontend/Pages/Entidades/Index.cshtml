@page
@model TorneoFutbol.App.Frontend.Pages.Entidades.IndexModel
@{
}
<h1>Listado de Entidades</h1>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Razon_Social</th>
            <th scope="col">Nit</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entidad in Model.entidad)
        {
            <tr>
                <td>@entidad.Razon_Social</td>
                <td>@entidad.Nit</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@entidad.Id">Detalle</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@entidad.Id">Editar</a>
                </td>
            </tr>
        }
        
    </tbody>
    
</table>
<a class="btn btn-primary" asp-page="./Create">Crear Entidad</a>
