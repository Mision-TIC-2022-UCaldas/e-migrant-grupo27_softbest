@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Grupos.IndexModel
@{
}

<form method="get">
<div class="form-inline">
    <label class="sr-only" for="g">Filtro</label>
    <input type="text" name="g" id="g" asp-for="@Model.gActual"  class="form-control mb-2 mr-sm-2"
         placeholder="Filtrar por Nombre" />
         
        <button type="submit" class="btn btn-primary mr-sm-2 mb-2">Filtrar</button>          

</div>
    
</form>
    
<h1>Listado de Grupos</h1>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre_Grupo</th>
            <th scope="col">Parentesco</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var grupo in Model.grupo)
        {
            <tr>
                <td>@grupo.Nombre_Grupo</td>
                <td>@grupo.Parentesco</td>
                
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@grupo.Id">Detalle</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@grupo.Id">Editar</a>
                </td>
            </tr>
        }
        
    </tbody>
    
</table>
<a class="btn btn-primary" asp-page="./Create">Crear Grupo</a>
