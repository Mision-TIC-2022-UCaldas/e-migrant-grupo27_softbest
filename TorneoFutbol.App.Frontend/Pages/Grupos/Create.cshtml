@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Grupos.CreateModel
@{
}
<h1>Nuevo Grupo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="grupo.Nombre_Grupo"></label>
        <input asp-for="grupo.Nombre_Grupo" class="form-control" placeholder="Ingrese el Nombre del Grupo">
        <span class="text-danger" asp-validation-for="grupo.Nombre_Grupo"></span>
    </div>  
    <div class="form-group">
        <label asp-for="grupo.Parentesco"></label>
        <input asp-for="grupo.Parentesco" class="form-control" placeholder="Ingrese el Parentesco con el Migrante Titular">
        <span class="text-danger" asp-validation-for="grupo.Parentesco"></span>
    </div> 
   
    <button type="submit" class="btn btn-primary btn-block">Crear Grupo</button> 
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a>