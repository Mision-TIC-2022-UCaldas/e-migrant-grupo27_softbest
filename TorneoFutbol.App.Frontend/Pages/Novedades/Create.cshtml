@model TorneoFutbol.App.Frontend.Pages.Novedades.CreateModel
@{
}
<h1>Nueva Novedad</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="novedad.Fecha_Novedad"></label>
        <input asp-for="novedad.Fecha_Novedad" class="form-control" placeholder="Ingrese el Nombre de la Necesidad">
        <span class="text-danger" asp-validation-for="novedad.Fecha_Novedad"></span>
    </div> 
    <div class="form-group">
        <label asp-for="novedad.Dias_Activo"></label>
        <input asp-for="novedad.Dias_Activo" class="form-control" placeholder="Ingrese la Descripcion de la Necesidad">
        <span class="text-danger" asp-validation-for="novedad.Descripcion"></span>
    </div> 
    <div class="form-group">
        <label asp-for="novedad.Descripcion"></label>
        <input asp-for="novedad.Descripcion" class="form-control" placeholder="Ingrese la Descripcion de la Necesidad">
        <span class="text-danger" asp-validation-for="novedad.Descripcion"></span>
    </div> 
    
    
    <button type="submit" class="btn btn-primary btn-block">Crear Novedad</button> 
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a>