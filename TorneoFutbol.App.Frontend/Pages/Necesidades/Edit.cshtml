@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Necesidades.EditModel
@{
}
<h1>Actualizar Necesidades</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="necesidad.Id"></label>
        <input asp-for="necesidad.Id" class="form-control" readonly>
    </div> 
    <div class="form-group">
        <label asp-for="necesidad.Nombre_Nesesidad"></label>
        <input asp-for="necesidad.Nombre_Nesesidad" class="form-control" placeholder="Ingrese el Nombre de la Necesidad">
        <span class="text-danger" asp-validation-for="necesidad.Nombre_Nesesidad"></span>
    </div>  
    <div class="form-group">
        <label asp-for="necesidad.Descripcion"></label>
        <input asp-for="necesidad.Descripcion" class="form-control" placeholder="Ingrese la Descripcion de la Necesidad">
        <span class="text-danger" asp-validation-for="necesidad.Descripcion"></span>
    </div> 
    <div class="form-group">
        <label asp-for="necesidad.Prioridad"></label>
        <input asp-for="necesidad.Prioridad" class="form-control" placeholder="Ingrese la Prioridad de la necesidad">
        <span class="text-danger" asp-validation-for="necesidad.Prioridad"></span>
    </div> 
    <div class="form-group">
        <label asp-for="necesidad.Migrante"></label>
        <input asp-for="necesidad.Migrante" class="form-control" placeholder="">
        <span class="text-danger" asp-validation-for="necesidad.Migrante"></span>
    </div> 
    <div class="form-group">
        <label asp-for="necesidad.Entidad"></label>
        <input asp-for="necesidad.Entidad" class="form-control" placeholder="">
        <span class="text-danger" asp-validation-for="necesidad.Entidad"></span>
    </div> 
    <button type="submit" class="btn btn-primary btn-block">Actualizar Necesidad</button> 
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a> 