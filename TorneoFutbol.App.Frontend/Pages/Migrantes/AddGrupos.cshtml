@page
@model TorneoFutbol.App.Frontend.Pages.Migrantes.AddGruposModel
@{
}

<h1>Asignar Grupo</h1>
<form method="post">
    <div class="form-group">
        <label for="IdMigrante">Migrante</label>
        <input type= "text" id = "IdMigrante" name="IdMigrante" class="form-control" value="@Model.migrante.Id" readonly>
    </div> 
    <div class="form-group">
        <label for="IdGrupo">Grupo</label>
        <select name="IdGrupo" id="IdGrupo" name = "IdGrupo" class="form-control">
            @foreach (var grupo in Model.grupo)
            {
                <option value = "@grupo.Id">@grupo.Nombre_Grupo</option>
            }

        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Asignar Grupo</button>
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a>