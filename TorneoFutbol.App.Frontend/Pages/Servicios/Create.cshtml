@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Servicios.CreateModel
@{
}
<h1>Nuevo Servicio</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="servicio.Nombre"></label>
        <input asp-for="servicio.Nombre" class="form-control" placeholder="Ingrese el Nombre del Servicio">
        <span class="text-danger" asp-validation-for="servicio.Nombre"></span>
    </div>  
    <div class="form-group">
        <label asp-for="servicio.Numero_Migrantes"></label>
        <input asp-for="servicio.Numero_Migrantes" class="form-control" placeholder="Ingrese el Numero Maximo de Migrantes">
        <span class="text-danger" asp-validation-for="servicio.Numero_Migrantes"></span>
    </div> 
    <div class="form-group">
        <label asp-for="servicio.Fecha_Inico_Servicio"></label>
        <input asp-for="servicio.Fecha_Inico_Servicio" class="form-control" placeholder="Ingrese la Fecha de Inico del Servicio">
        <span class="text-danger" asp-validation-for="servicio.Fecha_Inico_Servicio"></span>
    </div> 
    <div class="form-group">
        <label asp-for="servicio.Fecha_Fin_Servicio"></label>
        <input asp-for="servicio.Fecha_Fin_Servicio" class="form-control" placeholder="Ingrese la Fecha en la que Finaliza el Servicio">
        <span class="text-danger" asp-validation-for="servicio.Fecha_Fin_Servicio"></span>
    </div> 
    <div class="form-group">
        <label asp-for="servicio.Estado_Servicio"></label>
        <select asp-for="servicio.Estado_Servicio" asp-items="Html.GetEnumSelectList<Estado_Servicio>()"class="form-control"></select>
    </div>
    
    <button type="submit" class="btn btn-primary btn-block">Crear Servicio</button> 
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a>